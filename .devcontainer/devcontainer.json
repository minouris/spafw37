{
  "name": "Simple Python App Framework Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.envFile": "${workspaceFolder}/.env",
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python",
        "loic-pryv.automatic-terminal",
        "ms-python.vscode-pylance",
        "ms-python.debugpy@2024.0.1",
        "GitHub.vscode-pull-request-github",
        "github.vscode-github-actions",
        "vstirbu.vscode-mermaid-preview",
        "ms-vscode.vscode-websearchforcopilot"
      ]
    }
  },
  "remoteUser": "pythondev",
  "workspaceFolder": "/workspaces/spafw37",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/spafw37,type=bind,consistency=cached",
  "mounts": [
    "source=/etc/timezone,target=/etc/timezone,type=bind,readonly",
    "source=/etc/localtime,target=/etc/localtime,type=bind,readonly"
  ]
}